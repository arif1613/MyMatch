    @if (Model.username == User.Identity.Name)
    { 
        <span style="float: right">
            @Ajax.ActionLink("Edit", "lookingfor_edit", new { id = Model.ID }, new AjaxOptions
       {
           UpdateTargetId = "mobile_view",
