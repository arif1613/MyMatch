@{
    ViewBag.Title = "photo_galary";
}


<script src="~/Scripts/jquery-1.8.2.js"></script>
<h3 class="banner">Photos of @ViewBag.user</h3>

<div id="slideshow-wrap">
    <input type="radio" id="button-1" name="controls" checked="checked" />
    <label for="button-1"></label>
    <input type="radio" id="button-2" name="controls" />
    <label for="button-2"></label>
    <div id="slideshow-inner">
        <ul>
            <li id="slide1">
                <img src="~/Images/Pictures/@(ViewBag.user)..1.png" height="450" width="300" alt="none" />
            </li>
            <li id="slide2">
                <img src="~/Images/Pictures/@(ViewBag.user)..2.png" height="450" width="300" alt="none" />
            </li>
        </ul>
    </div>
</div>
<br />
@section login{
    <div style="background-color: #8ac5e8; padding: 1%">

        <a style="color: white">@Html.ActionLink("My Profile", "Index", "myprofile")</a>
        <br />
        <div id="changepassword">
            @Html.ActionLink("[ Log Out ]", "LogOff", "Account")
            @Ajax.ActionLink("[ Change Password ]", "ChangePassword", "Account", new AjaxOptions
     {
         UpdateTargetId = "changepassword",
         InsertionMode = InsertionMode.Replace,
         HttpMethod = "GET"

     })
        </div>
    </div>
}


@section search{
    <div class="hideinmobile">
        @Html.Action("search_Index", "search")
    </div>
}
@section profileview{
    <div class="hideinmobile">
        @Html.Action("profile_viewer_partial", "Profile_Viewers")
    </div>
}
@section message{
    <div class="hideinmobile">
        @Html.Action("message_partial", "message")
    </div>
}