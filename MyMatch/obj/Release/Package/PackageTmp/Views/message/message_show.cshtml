@model MyMatch.Models.message

<div style="width: 100%">
    <div id="header" class="banner-message" style="float: left; clear: both">

        <a href="@Url.Action("user_profile_Index", "user_profile", new { user_name = Model.msg_sender })">
            <img src="~/Images/Pictures/@(Model.msg_sender)..1.png" height="30" width="30" />  @Model.msg_sender</a>
            wrote on @Model.msg_date.ToString("dd,MMM,yyyy") at @Model.msg_date.ToString("HH:mm")  :
            <p>@Model.msg_body</p>
        
    </div>

</div>
