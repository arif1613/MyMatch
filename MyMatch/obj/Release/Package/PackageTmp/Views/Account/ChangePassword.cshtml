@model MyMatch.Models.ChangePasswordModel

@using (Html.BeginForm("ChangePassword", "Account"))
{
    @Html.ValidationSummary(true)
        
    <table class="editor-small" style="z-index:800">
        <tr>
            <th>Old Password:
            </th>
            <td>
                @Html.EditorFor(m => m.OldPassword)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.OldPassword)
            </td>
        </tr>
        <tr>
            <th>New Password:
            </th>
            <td>
                @Html.EditorFor(m => m.NewPassword)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.NewPassword)
            </td>
        </tr>
        <tr>
            <th>Contirm New Password:
            </th>
            <td>
                @Html.EditorFor(m => m.ConfirmPassword)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </td>
        </tr>
        <tr>
            <th></th>
            <td>
                <input type="submit" value="Change Password" />
            </td>
            <td>
                @Html.ActionLink("Cancel", "Index", "myprofile")
            </td>
        </tr>
    </table>
}

