@model MyMatch.Models.profile_logininfo

<h3 style="text-align: center">@User.Identity.Name</h3>

@using (Html.BeginForm("edit_picture1", "myprofile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="editor-small">
        <tr>
            <th style="text-align: center">
                <img src="~/Images/Pictures/@(User.Identity.Name)..1.png" height="50" width="50" />
            </th>
            <td>
                <input type="file" name="edit_picture1" style="font-size: .8em" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Update" style="font-size: .8em" />
            </td>
        </tr>
    </table>
}
