@model MyMatch.Models.profile_logininfo

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>


<p class="hideinmobile" style="color:red; font: 12px bold sans-serif; text-align:center">Please update all your informations so that people can find and meet you easily. </p>
@section login{

    <a style="color: white">Hello, @User.Identity.Name</a><a style="color: red">(@ViewBag.status user)</a>
    <br />
    <div id="changepassword">
        @Html.ActionLink("[ Log Out ]", "LogOff", "Account")
        @Ajax.ActionLink("[ Change Password ]", "ChangePassword", "Account", new AjaxOptions
     {
         UpdateTargetId = "changepassword",
         InsertionMode = InsertionMode.Replace,
         HttpMethod = "GET"

     })
    </div>

}

